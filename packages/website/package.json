    "nextra": "^2.13.4",
    "nextra-theme-docs": "^2.13.4",
    "pako": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.0.1",
    "remark-gfm": "^4.0.0",
    "shiki": "^0.14.7"
