{
  "name": "@quri/squiggle-lang",
  "sources": [
    {
      "dir": "src/rescript",
      "subdirs": true
    },
    {
      "dir": "__tests__",
      "type": "dev",
      "subdirs": true
    }
  ],
  "bsc-flags": ["-bs-super-errors", "-bs-no-version-header", "-bs-g"],
  "package-specs": [
    {
      "module": "commonjs",
      "in-source": true
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "bs-dependencies": ["bisect_ppx"],
  "bs-dev-dependencies": ["@glennsl/rescript-jest", "rescript-fast-check"],
  "gentypeconfig": {
    "language": "typescript",
    "module": "commonjs",
    "shims": { "Js": "Js" },
    "debug": {
      "all": false,
      "basic": false
    }
  },
  "external-stdlib": "@rescript/std",
  "refmt": 3,
  "warnings": {
    "number": "+A-42-48-9-30-4"
  },
  "ppx-flags": [
    ["../../node_modules/bisect_ppx/bin/linux/ppx", "--exclude-files", ".*_test\\.res$$"]
  ]
}
