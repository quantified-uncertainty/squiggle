{
  "name": "@quri/hub",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "next dev -p 3001 --turbo",
    "start": "next start",
    "build:esbuild": "node ./esbuild.cjs",
    "build:ts": "NODE_OPTIONS=--max-old-space-size=4096 tsc",
    "bundle": "pnpm build:esbuild && cp ../../internal-packages/hub-db/generated/*.node ./dist",
    "build": "next build",
    "lint": "pnpm lint:prettier && pnpm eslint",
    "lint:prettier": "prettier --check .",
    "lint:helm": "helm template ./ops/chart --set image.tag=lint >/dev/null",
    "eslint": "ESLINT_USE_FLAT_CONFIG=false NODE_NO_WARNINGS=1 eslint src",
    "format": "prettier --write .",
    "test:manual": "dotenv -e .env.test -- jest -i",
    "build-last-revision": "pnpm build:esbuild && NODE_OPTIONS=--conditions=react-server node ./dist/scripts/buildRecentModelRevision/main.mjs",
    "dbshell": ". .env && psql $DATABASE_URL"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.8.0",
    "@quri/hub-api-client": "workspace:^",
    "@quri/hub-db": "workspace:*",
    "@quri/hub-linker": "workspace:^",
    "@quri/metaforecast-db": "workspace:^",
    "@quri/squiggle-ai": "workspace:*",
    "@quri/squiggle-components": "workspace:*",
    "@quri/squiggle-lang": "workspace:*",
    "@quri/ui": "workspace:*",
    "@quri/versioned-squiggle-components": "workspace:*",
    "@vercel/analytics": "^1.5.0",
    "base64-js": "^1.5.1",
    "clsx": "^2.1.1",
    "commander": "^13.1.0",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "immutable": "^5.1.1",
    "invariant": "^2.2.4",
    "lodash": "^4.17.21",
    "next": "^15.2.4",
    "next-auth": "5.0.0-beta.25",
    "next-safe-action": "^7.10.4",
    "pako": "^2.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.2",
    "react-icons": "^5.5.0",
    "react-loading-skeleton": "^3.5.0",
    "react-markdown": "^10.1.0",
    "react-select": "^5.9.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "server-only": "^0.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.11.0",
    "@quri/configs": "workspace:*",
    "@types/d3": "^7.4.3",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.0",
    "@types/pako": "^2.0.3",
    "@types/react": "^19.1.0",
    "@typescript/analyze-trace": "^0.10.1",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
